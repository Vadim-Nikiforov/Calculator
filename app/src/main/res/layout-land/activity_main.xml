<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/android_cool" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                tools:ignore="NestedWeights">

            </Space>

            <TextView
                android:id="@+id/textInput"
                android:layout_marginLeft="@dimen/textView_margin"
                android:layout_marginRight="@dimen/textView_margin"
                android:text=""
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_size"
                tools:ignore="SpUsage"
                style="@style/radio_button_style" />

            <TextView
                android:id="@+id/textOutput"
                android:layout_marginLeft="@dimen/textView_margin"
                android:layout_marginRight="@dimen/textView_margin"
                android:text=""
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_size"
                tools:ignore="SpUsage"
                style="@style/radio_button_style" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

            </Space>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                tools:ignore="NestedWeights">

            </Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_clear"
                    style="@style/buttons_styles.actions"
                    android:text="@string/clear" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_sign"
                    style="@style/buttons_styles.actions"
                    android:text="@string/sign" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_clear_all"
                    style="@style/buttons_styles.actions"
                    android:text="@string/clear_all" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_addition"
                    style="@style/buttons_styles.actions"
                    android:text="@string/addition" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button1"
                    style="@style/buttons_styles.number"
                    android:text="@string/_1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button2"
                    style="@style/buttons_styles.number"
                    android:text="@string/_2" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button3"
                    style="@style/buttons_styles.number"
                    android:text="@string/_3" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_subtraction"
                    style="@style/buttons_styles.actions"
                    android:text="@string/subtraction" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button4"
                    style="@style/buttons_styles.number"
                    android:text="@string/_4" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button5"
                    style="@style/buttons_styles.number"
                    android:text="@string/_5" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button6"
                    style="@style/buttons_styles.number"
                    android:text="@string/_6" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_multiplication"
                    style="@style/buttons_styles.actions"
                    android:text="@string/multiplication" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button7"
                    style="@style/buttons_styles.number"
                    android:text="@string/_7" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button8"
                    style="@style/buttons_styles.number"
                    android:text="@string/_8" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button9"
                    style="@style/buttons_styles.number"
                    android:text="@string/_9" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_division"
                    style="@style/buttons_styles.actions"
                    android:text="@string/division" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_dot"
                    style="@style/buttons_styles.actions"
                    android:text="@string/_point" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button0"
                    style="@style/buttons_styles.number"
                    android:text="@string/_0" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_equals"
                    style="@style/buttons_styles.actions"
                    android:text="@string/equals" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_settings"
                    style="@style/buttons_styles.actions"
                    android:text="@string/settings"
                    android:textSize="@dimen/text_size_setting"
                    tools:ignore="SpUsage" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>